<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VerveBridge - Invoice generator</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>

    <div class="container">
        <div class="invoice">
            <!-- Header Section -->
            <div class="invoice-header">
                <div class="invoice-header-top">
                    <div class="brand-logo">
                        <img class="logo" src="/images/vervebridge_logo.png" alt="VerveBridge Logo">
                        <div class="brand-heading">
                            <h1 class="brand-title" style="font-size: 28px;">VerveBridge</h1>
                            <p class="brand-phrase">Crafting Careers</p>
                        </div>
                    </div>
                    <div class="invoice-header-title">
                        <div class="invoice-title">Invoice</div>
                    </div>
                </div>
                <div class="invoice-header-bottom">
                    <div class="invoice-info">
                        <div class="invoice-number">
                            <!-- <img src="/images/arrow.svg" alt=""> -->
                            <div class="rectangle">
                                <h2 class="invoice-subtitle">Invoice#</h2>
                                <h2 class="invoice-id">1</h2>
                            </div>
                            <div class="arrow-right"></div>
                        </div>
                        <div class="invoice-date">
                            <h2 class="invoice-date-sub">Date: <span class="date">
                                    <%= date %>
                                </span></h2>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Customer Information Section -->
            <div class="invoice-details">
                <div class="invoice-to">
                    <h1 class="brand-title" style="font-size: 24px;">Invoice to:</h1>
                </div>
                <div class="customer-details">
                    <div class="customer-name">
                        <h1 id="text" style="font-size: 16px;">
                            <%= customerName %>
                        </h1>
                    </div>
                    <div class=" customer-address">
                        <h1 id="text" style="font-size: 14px;">
                            <%= customerAddress %>
                        </h1>
                    </div>
                </div>
            </div>
            <!-- Invoice Table Section -->
            <div class="invoice-table">
                <div class="table-header">
                    <div class="table-arrowr">
                        <div class="rectangle" style="justify-content: start;">
                            <div class="table-sn">
                                <h2 id="title2" style="color: #e6e6e6;">SL.</h2>
                            </div>
                            <div class="table-desc">
                                <h2 id="title2" style="color: #e6e6e6;">Item Description</h2>
                            </div>
                        </div>
                        <div class="arrow-right"></div>
                        <div class="table-price">
                            <h2 id="title2">Price</h2>
                        </div>
                    </div>
                    <div class="table-qty">
                        <h2 id="title2">Qty.</h2>
                    </div>
                    <div class="table-total">
                        <h2 id="title2">Total</h2>
                    </div>
                </div>
                <!-- <div class="table-row">
                    <div class="row-items">
                        <div class="row-sn">1</div>
                        <div class="row-name">itemName</div>
                        <div class="row-price"></div>
                        <div class="row-qty"></div>
                        <div class="row-total"></div>
                    </div>
                </div> -->
                <table>
                    <tbody>
                        <% items.forEach((item, index)=> { %>
                            <tr>
                                <td id="gray" class="row-sln">
                                    <%= index + 1 %>
                                </td>
                                <td id="white" class="row-item">
                                    <%= item.name %>
                                </td>
                                <td id="gray" class="row-price">
                                    $<%= item.price.toFixed(2) %>
                                </td>
                                <td id="white" class="row-qty">
                                    <%= item.quantity %>
                                </td>
                                <td id="gray" class="row-total">
                                    $<%= item.total.toFixed(2) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
                <div class="table-footer"></div>
            </div>

            <div class="checkout-summary">
                <div class="summary-info">
                    <div class="payment-info">
                        <!-- <div class="acc-number"></div>
                        <div class="acc-name"></div>
                        <div class="bank-details"></div> -->
                        <h1 id="title1">Payment Info:</h1>
                        <p id="title3">Account #: <%= accountNumber %>
                        </p>
                        <p id="title3">A/C Name: <%= accountName %>
                        </p>
                        <p id="title3">Bank Details: <%= otherDetails %>
                        </p>
                    </div>
                    <div class="terms">
                        <h1 id="title1">Terms & Conditions</h1>
                        <p id="title3">Payment is due within 30 days. A late fee of 1.5% applies to overdue payments.
                        </p>
                    </div>
                </div>
                <div class="summary-totals">
                    <div class="item-total">
                        <div class="sub-total">
                            <h2 id="title1" style="text-align: right;">Sub Total: <span id="span1">
                                    $<%= subtotal %>
                                </span></h2>

                        </div>
                        <div class="tax">
                            <h2 id="title1" style="text-align: right;">Tax: <span id="span2">
                                    <%= tax %>%
                                </span></h2>
                        </div>
                        <div class="total">
                            <div class="rectangle" style="width: 65%;">
                                <h2 id="total-amt">Total: <span id="span3">$<%= total %></span></h2>
                            </div>
                            <div class="arrow-right"></div>
                        </div>

                        <!-- <h1></h1> -->
                    </div>
                    <div class="auth-sign">
                        <img class="signature" src="/images/vervebridge_sign.jpg" alt="">
                        <div class="sign-area"></div>
                        <h2 class="brand-sign" id="title1">Authorised Sign</h2>
                    </div>
                </div>
            </div>
            <div class="footer">
                <div class="thank">
                    <div class="rectangle" style="display: flex; justify-content: center;">
                        <h2 id="thankyou">Thank you for your business</h2>
                    </div>
                    <div class="arrow-right"></div>
                </div>

                <div class="shape">

                </div>
            </div>
        </div>
    </div>

</body>

</html>